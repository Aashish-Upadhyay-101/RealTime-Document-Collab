generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum IdentityProvider {
  RESTRICTIFY
  GOOGLE
}

model User {
  id               Int               @id @default(autoincrement())
  username         String            @unique
  firstName        String
  lastName         String
  email            String            @unique
  password         String
  identityProvider IdentityProvider? @default(RESTRICTIFY)
  isActive         Boolean?
  isVerified       Boolean?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}
